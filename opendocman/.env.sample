# OpenDocMan Docker Environment Configuration
# Copy this file to .env and customize the values for your installation

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL/MariaDB Database Settings
MYSQL_DATABASE=opendocman
MYSQL_USER=opendocman
MYSQL_PASSWORD=changeme_db_password
MYSQL_ROOT_PASSWORD=changeme_root_password

# Database Connection Settings (used by OpenDocMan app)
APP_DB_HOST=db
DB_PORT=3306
APP_DB_NAME=opendocman
APP_DB_USER=opendocman
APP_DB_PASS=changeme_db_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# OpenDocMan Data Directory (inside container)
ODM_DATA_DIR=/var/www/document_repository

# Docker Environment Flag
IS_DOCKER=true

# Application Hostname
# This must match the exact domain:port you are using to access the site.
# Format: HOSTNAME:{optional: SERVICE_PORT}
# Ex. http://localhost:8080 would be "localhost:8080".
ODM_HOSTNAME=odm.local

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# External ports that will be mapped to the host
# Format: HOST_PORT:CONTAINER_PORT

# Database Port (MySQL/MariaDB)
DB_EXTERNAL_PORT=3306

# Web Server Ports
HTTP_PORT=8080
HTTPS_PORT=443
PHP_FPM_PORT=9000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Admin Password for Initial Installation
# This will be used to create the default admin user during installation
ADMIN_PASSWORD=changeme_admin_password

# Session Secret (used for session encryption)
SESSION_SECRET=changeme_session_secret_key

# File Upload Settings
MAX_FILE_SIZE=50M
UPLOAD_MAX_FILESIZE=50M
POST_MAX_SIZE=120M

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings for email notifications
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=OpenDocMan

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention (days)
BACKUP_RETENTION=30

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Enable/Disable debug mode
DEBUG_MODE=false

# PHP Error Reporting Level
PHP_ERROR_REPORTING=E_ALL & ~E_NOTICE & ~E_STRICT & ~E_DEPRECATED

# Log Level (error, warning, info, debug)
LOG_LEVEL=warning

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/ssl/certs/odm.crt
SSL_KEY_PATH=/etc/ssl/private/odm.key

# Enable/Disable SSL
SSL_ENABLED=false

# =============================================================================
# VOLUME MOUNT PATHS
# =============================================================================

# Host paths for persistent data (optional - leave empty to use Docker volumes)
# If specified, these paths on the host will be mounted instead of using named volumes

# Host path for document storage
HOST_DATA_PATH=

# Host path for database storage
HOST_DB_PATH=

# Host path for configuration files
HOST_CONFIG_PATH=

# =============================================================================
# ADDITIONAL ENVIRONMENT VARIABLES
# =============================================================================

# Timezone setting
TZ=UTC

# Memory limits
PHP_MEMORY_LIMIT=512M

# Execution time limits
PHP_MAX_EXECUTION_TIME=300

# Database table prefix
DB_PREFIX=odm_

# Default language
DEFAULT_LANGUAGE=english

# Default theme
DEFAULT_THEME=tweeter
